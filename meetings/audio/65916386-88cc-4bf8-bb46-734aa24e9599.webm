<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voice Meeting Assistant</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link rel="stylesheet" href="/style.css">
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        glass: {
                            light: 'rgba(255, 255, 255, 0.7)',
                            dark: 'rgba(17, 24, 39, 0.7)',
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 min-h-screen transition-colors duration-500">
    
    <!-- Sidebar Navigation -->
    <aside id="sidebar" class="fixed left-0 top-0 h-screen w-64 bg-white/80 dark:bg-gray-900/80 backdrop-blur-xl border-r border-gray-200 dark:border-gray-700 shadow-2xl z-50 transform transition-transform duration-300 ease-in-out">
        <div class="p-6">
            <div class="flex items-center gap-3 mb-8">
                <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                    <i data-lucide="mic" class="text-white w-6 h-6"></i>
                </div>
                <div>
                    <h1 class="text-xl font-bold text-gray-800 dark:text-white">Voice Meeting</h1>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Assistant</p>
                </div>
            </div>
            
            <nav class="space-y-2">
                <button onclick="switchView('record')" class="nav-btn w-full flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-indigo-50 dark:hover:bg-gray-800 transition-all duration-200 group active" data-view="record">
                    <i data-lucide="mic" class="w-5 h-5 text-indigo-600 dark:text-indigo-400"></i>
                    <span class="text-gray-700 dark:text-gray-300 font-medium">Record Meeting</span>
                </button>
                
                <button onclick="switchView('history')" class="nav-btn w-full flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-indigo-50 dark:hover:bg-gray-800 transition-all duration-200 group" data-view="history">
                    <i data-lucide="history" class="w-5 h-5 text-indigo-600 dark:text-indigo-400"></i>
                    <span class="text-gray-700 dark:text-gray-300 font-medium">Past Meetings</span>
                </button>
                
                <button onclick="switchView('settings')" class="nav-btn w-full flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-indigo-50 dark:hover:bg-gray-800 transition-all duration-200 group" data-view="settings">
                    <i data-lucide="settings" class="w-5 h-5 text-indigo-600 dark:text-indigo-400"></i>
                    <span class="text-gray-700 dark:text-gray-300 font-medium">Settings</span>
                </button>
            </nav>
        </div>
        
        <div class="absolute bottom-6 left-6 right-6">
            <button onclick="toggleTheme()" class="w-full flex items-center justify-center gap-2 px-4 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white rounded-xl shadow-lg transition-all duration-200 transform hover:scale-105">
                <i data-lucide="moon" id="themeIcon" class="w-5 h-5"></i>
                <span id="themeText" class="font-medium">Dark Mode</span>
            </button>
        </div>
    </aside>

    <!-- Mobile Sidebar Toggle -->
    <button id="sidebarToggle" class="fixed top-4 left-4 z-50 md:hidden bg-white/80 dark:bg-gray-900/80 backdrop-blur-xl p-3 rounded-xl shadow-lg">
        <i data-lucide="menu" class="w-6 h-6 text-gray-700 dark:text-gray-300"></i>
    </button>

    <!-- Main Content Area -->
    <main class="ml-0 md:ml-64 min-h-screen p-4 md:p-8 transition-all duration-300">
        
        <!-- Record Meeting View -->
        <section id="recordView" class="view-section">
            <div class="max-w-6xl mx-auto">
                <div class="glass-card rounded-3xl p-8 mb-6 animate-fade-in">
                    <div class="flex items-center justify-between mb-6">
                        <div>
                            <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-2">Record Meeting</h2>
                            <p class="text-gray-600 dark:text-gray-400">Capture and transcribe your conversations with AI</p>
                        </div>
                        <div class="hidden md:block">
                            <div class="flex items-center gap-2 px-4 py-2 bg-green-100 dark:bg-green-900/30 rounded-full">
                                <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                                <span class="text-sm font-medium text-green-700 dark:text-green-400">Ready to Record</span>
                            </div>
                        </div>
                    </div>

                    <div class="grid md:grid-cols-2 gap-6">
                        <!-- Recording Controls -->
                        <div class="glass-card rounded-2xl p-6 border border-gray-200 dark:border-gray-700">
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
                                <i data-lucide="radio" class="w-5 h-5 text-indigo-600"></i>
                                Recording Controls
                            </h3>
                            
                            <div class="flex flex-col items-center space-y-4">
                                <!-- Waveform Animation Container -->
                                <div id="waveformContainer" class="hidden w-full h-24 flex items-center justify-center gap-1">
                                    <div class="waveform-bar"></div>
                                    <div class="waveform-bar"></div>
                                    <div class="waveform-bar"></div>
                                    <div class="waveform-bar"></div>
                                    <div class="waveform-bar"></div>
                                    <div class="waveform-bar"></div>
                                    <div class="waveform-bar"></div>
                                </div>
                                
                                <div class="flex gap-4">
                                    <button id="startBtn" class="record-btn group">
                                        <i data-lucide="mic" class="w-8 h-8"></i>
                                        <span class="mt-2 text-sm font-medium">Start</span>
                                    </button>
                                    
                                    <button id="stopBtn" disabled class="stop-btn group">
                                        <i data-lucide="square" class="w-8 h-8"></i>
                                        <span class="mt-2 text-sm font-medium">Stop</span>
                                    </button>
                                </div>
                                
                                <div id="recordingStatus" class="hidden flex items-center gap-2 text-red-600 dark:text-red-400">
                                    <div class="recording-pulse"></div>
                                    <span class="font-medium">Recording in progress...</span>
                                </div>
                                
                                <div id="processingStatus" class="hidden flex items-center gap-2 text-blue-600 dark:text-blue-400">
                                    <div class="spinner"></div>
                                    <span class="font-medium">Processing audio...</span>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Stats -->
                        <div class="glass-card rounded-2xl p-6 border border-gray-200 dark:border-gray-700">
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
                                <i data-lucide="bar-chart-3" class="w-5 h-5 text-indigo-600"></i>
                                Quick Stats
                            </h3>
                            <div class="space-y-4">
                                <div class="flex items-center justify-between p-3 bg-blue-50 dark:bg-blue-900/20 rounded-xl">
                                    <span class="text-gray-700 dark:text-gray-300">Total Meetings</span>
                                    <span id="totalMeetings" class="text-2xl font-bold text-blue-600 dark:text-blue-400">0</span>
                                </div>
                                <div class="flex items-center justify-between p-3 bg-purple-50 dark:bg-purple-900/20 rounded-xl">
                                    <span class="text-gray-700 dark:text-gray-300">This Week</span>
                                    <span id="weekMeetings" class="text-2xl font-bold text-purple-600 dark:text-purple-400">0</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Results Section -->
                <div id="results" class="hidden">
                    <div class="glass-card rounded-3xl p-8 space-y-6 animate-slide-up">
                        <h3 class="text-2xl font-bold text-gray-800 dark:text-white mb-6 flex items-center gap-2">
                            <i data-lucide="sparkles" class="w-6 h-6 text-indigo-600"></i>
                            Meeting Results
                        </h3>
                        
                        <!-- Transcript Card -->
                        <div class="collapsible-card">
                            <button onclick="toggleCard('transcriptCard')" class="w-full flex items-center justify-between p-4 bg-blue-50 dark:bg-blue-900/20 rounded-xl hover:bg-blue-100 dark:hover:bg-blue-900/30 transition-all">
                                <div class="flex items-center gap-3">
                                    <i data-lucide="file-text" class="w-5 h-5 text-blue-600 dark:text-blue-400"></i>
                                    <span class="font-semibold text-gray-800 dark:text-white">Transcript</span>
                                </div>
                                <i data-lucide="chevron-down" class="w-5 h-5 text-gray-600 dark:text-gray-400 transition-transform transform" id="transcriptCardIcon"></i>
                            </button>
                            <div id="transcriptCard" class="card-content mt-3 p-4 bg-white/50 dark:bg-gray-800/50 rounded-xl">
                                <p id="transcript" class="text-gray-700 dark:text-gray-300 leading-relaxed"></p>
                            </div>
                        </div>
                        
                        <!-- Summary Card -->
                        <div class="collapsible-card">
                            <button onclick="toggleCard('summaryCard')" class="w-full flex items-center justify-between p-4 bg-green-50 dark:bg-green-900/20 rounded-xl hover:bg-green-100 dark:hover:bg-green-900/30 transition-all">
                                <div class="flex items-center gap-3">
                                    <i data-lucide="align-left" class="w-5 h-5 text-green-600 dark:text-green-400"></i>
                                    <span class="font-semibold text-gray-800 dark:text-white">Summary</span>
                                </div>
                                <i data-lucide="chevron-down" class="w-5 h-5 text-gray-600 dark:text-gray-400 transition-transform transform" id="summaryCardIcon"></i>
                            </button>
                            <div id="summaryCard" class="card-content mt-3 p-4 bg-white/50 dark:bg-gray-800/50 rounded-xl">
                                <p id="summary" class="text-gray-700 dark:text-gray-300 leading-relaxed"></p>
                            </div>
                        </div>
                        
                        <!-- Action Items Card -->
                        <div class="collapsible-card">
                            <button onclick="toggleCard('actionCard')" class="w-full flex items-center justify-between p-4 bg-purple-50 dark:bg-purple-900/20 rounded-xl hover:bg-purple-100 dark:hover:bg-purple-900/30 transition-all">
                                <div class="flex items-center gap-3">
                                    <i data-lucide="check-square" class="w-5 h-5 text-purple-600 dark:text-purple-400"></i>
                                    <span class="font-semibold text-gray-800 dark:text-white">Action Items</span>
                                </div>
                                <i data-lucide="chevron-down" class="w-5 h-5 text-gray-600 dark:text-gray-400 transition-transform transform" id="actionCardIcon"></i>
                            </button>
                            <div id="actionCard" class="card-content mt-3 p-4 bg-white/50 dark:bg-gray-800/50 rounded-xl">
                                <ul id="actionItems" class="space-y-2"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Past Meetings View -->
        <section id="historyView" class="view-section hidden">
            <div class="max-w-6xl mx-auto">
                <div class="glass-card rounded-3xl p-8 animate-fade-in">
                    <div class="flex flex-col md:flex-row md:items-center justify-between mb-6 gap-4">
                        <div>
                            <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-2">Past Meetings</h2>
                            <p class="text-gray-600 dark:text-gray-400">Browse and export your meeting history</p>
                        </div>
                        
                        <div class="relative">
                            <i data-lucide="search" class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400"></i>
                            <input 
                                type="text" 
                                id="searchInput" 
                                placeholder="Search meetings..." 
                                class="pl-10 pr-4 py-3 bg-white/50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all w-full md:w-80"
                            >
                        </div>
                    </div>
                    
                    <div id="meetingsList" class="space-y-3">
                        <p class="text-gray-500 dark:text-gray-400 text-center py-12">No meetings recorded yet</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Settings View -->
        <section id="settingsView" class="view-section hidden">
            <div class="max-w-4xl mx-auto">
                <div class="glass-card rounded-3xl p-8 animate-fade-in">
                    <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-6">Settings</h2>
                    
                    <div class="space-y-6">
                        <div class="p-6 bg-white/50 dark:bg-gray-800/50 rounded-xl border border-gray-200 dark:border-gray-700">
                            <div class="flex items-center justify-between">
                                <div>
                                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-1">Dark Mode</h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-400">Toggle between light and dark themes</p>
                                </div>
                                <button onclick="toggleTheme()" class="px-6 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white rounded-xl shadow-lg transition-all duration-200 transform hover:scale-105">
                                    <i data-lucide="palette" class="w-5 h-5"></i>
                                </button>
                            </div>
                        </div>
                        
                        <div class="p-6 bg-white/50 dark:bg-gray-800/50 rounded-xl border border-gray-200 dark:border-gray-700">
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-3">About</h3>
                            <p class="text-gray-600 dark:text-gray-400 mb-4">Voice Meeting Assistant uses Google Gemini AI to transcribe and summarize your meetings.</p>
                            <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
                                <i data-lucide="info" class="w-4 h-4"></i>
                                <span>Version 1.0.0</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="mt-12 text-center pb-6">
            <p class="text-sm text-gray-600 dark:text-gray-400">© All Rights Reserved — Dev Chalana and Kevindeep Dingh (2025)</p>
        </footer>
    </main>

    <script src="/script.js"></script>
    <script>
        lucide.createIcons();
    </script>
</body>
</html>
